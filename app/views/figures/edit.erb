<h2>Edit Historical Figure</h2>

<!-- add content here -->

<form action="/figures/<%= @figure.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <h3>
        <label>Edit the Figure Name:</label> 
        <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
    </h3>
    <br>
    <h3>Select a different title, add a title, or create a new title below.</h3>
    <h3>Titles</h3>
    <% @titles.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>>
        <%= title.name %>
        <br>
    <% end %>
    <br>
    <h3>Create New Title</h3>
    <input type="text" name="title[name]" id="new_title">
    <br>
    <h3>Select a different landmark, add a landmark, or create a new landmark below.</h3>
    <h3>Landmarks</h3>
    <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.name %>" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
        <%= landmark.name %>
        <br>
    <% end %>
    <br>
    <h3>Create New Landmark</h3>
    <h4>
        <label>Name: </label><input type="text" name="landmark[name]" id="new_landmark">
        <label>Year: </label><input type="text" name="landmark[year_completed]">
    </h4>
    <button type="submit">Edit Figure</button>
    <br><br>
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>