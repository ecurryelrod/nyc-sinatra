<h2>Create New Historical Figure</h2>

<!-- add content here -->

<form action="/figures" method="POST">
    <h3><label>Name</label> <input type="text" name="figure[name]" id="figure_name"></h3>
    <br>
    <h3>Titles</h3>
    <% @titles.each do |title| %>
        <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>">
        <%= title.name %>
        <br>
    <% end %>
    <br>
    <h3>Create New Title</h3>
    <input type="text" name="title[name]" id="new_title">
    <br>
    <h3>Landmarks</h3>
    <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>">
        <%= landmark.name %>
        <br>
    <% end %>
    <br>
    <h3>Create New Landmark:</h3>
    <h4>
        <label>Name: </label><input type="text" name="landmark[name]" id="new_landmark">
        <label>Year: </label><input type="text" name="landmark[year_completed]">
    </h4>
    <button type="submit">Create New Figure</button>
    <br><br>
</form>


<a class="button" href="/figures">Historical Figures</a><br>
